<div>
    {{#if contenedorVacio}}
        <h1>No hay productos para mostrar</h1>
    {{else}}
        <table>
            <tr>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Imagen</th>
            </tr>
            
            {{#each todosProductos}}
                <tr>
                    <td>{{this.name}}</td>
                    <td>{{this.price}}</td>
                    <td class="td-imagen"><img width="40px" height="auto" src={{this.url}}> </td>
                </tr>
            {{/each}}                
        </table>
    {{/if}}
</div>